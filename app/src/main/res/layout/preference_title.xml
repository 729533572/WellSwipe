<?xml version="1.0" encoding="utf-8"?>
<com.well.swipe.preference.PreferenceTitle xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/preference_height"
    android:background="@drawable/check_item_selector"
    android:gravity="center_vertical">

    <ImageView
        android:id="@id/preference_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/preference_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/preference_icon"
        android:textColor="@color/ksw_md_solid_checked"
        android:textSize="@dimen/preference_item_title_size" />

</com.well.swipe.preference.PreferenceTitle>