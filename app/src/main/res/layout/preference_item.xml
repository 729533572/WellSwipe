<?xml version="1.0" encoding="utf-8"?>
<com.well.swipe.preference.PreferenceItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/preference_height"
    android:gravity="center_vertical">

    <ImageView
        android:id="@id/preference_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/preference_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/preference_icon"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/preference_icon"
        android:layout_toRightOf="@id/preference_icon"
        android:text="设置000"
        android:textColor="@color/ksw_md_solid_checked"
        android:textSize="14sp" />

    <TextView
        android:id="@id/preference_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/preference_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/preference_icon"
        android:maxLength="2"
        android:text="详细详细"
        android:textSize="10sp" />
</com.well.swipe.preference.PreferenceItem>